
.Hybody{
	padding: 0 32rpx;
	height: 100%;
	font-size: 12px;
	background-color: #080808;
	color: #fff;
}
.head{
	height: 300rpx;
	background-color: rgb(62,63,59);
	-webkit-border-bottom-left-radius: 80rpx;
	        border-bottom-left-radius: 80rpx;
	-webkit-border-bottom-right-radius: 80rpx;
	        border-bottom-right-radius: 80rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: start;
	-webkit-align-items: flex-start;
	        align-items: flex-start;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	margin-bottom: 30rpx;
}
.head image{
	width: 120rpx;
	height: 120rpx;
	-webkit-border-radius: 50%;
	        border-radius: 50%;
}
.dfMes{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
	-webkit-flex-wrap: nowrap;
	        flex-wrap: nowrap;
}
.wdMes{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: end;
	-webkit-justify-content: flex-end;
	        justify-content: flex-end;
	-webkit-flex-wrap: nowrap;
	        flex-wrap: nowrap;
}
.wdMes .messige{
	text-align: right;
}
.wdMesImg,.dfMesImg{
	-webkit-border-radius: 50%;
	        border-radius: 50%;
	width: 110rpx;
	height: 110rpx;
	margin: 0 14rpx;
}
.messige{
	width: 470rpx;
	margin-top: 20rpx;
	font-size: 14px;
}
.dfMes .messige .messigeImg,.wdMes .messige .messigeImg{
	max-width: 470rpx;
	-webkit-border-radius: 20rpx;
	        border-radius: 20rpx;
	border: 2px solid #333333;
}

